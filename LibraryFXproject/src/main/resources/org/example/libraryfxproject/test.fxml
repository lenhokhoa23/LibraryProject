<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1">

    <center>
        <VBox spacing="20.0" style="-fx-padding: 20;" BorderPane.alignment="CENTER">
            <TextField promptText="Search for books..." prefHeight="30.0" prefWidth="300.0"
                       style="-fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: lightgray;" />
            <Label text="Welcome to the Library" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <ListView fx:id="bookListView" prefHeight="200.0" />
        </VBox>
    </center>

    <right>
        <VBox spacing="15.0" style="-fx-padding: 10; -fx-background-color: #f0f0f0;" BorderPane.alignment="CENTER">
            <Button text="Home" prefHeight="30.0" prefWidth="120.0" />
            <Button text="Books" prefHeight="30.0" prefWidth="120.0" />
            <Button text="Newspapers" prefHeight="30.0" prefWidth="120.0" />
            <Button text="Magazines" prefHeight="30.0" prefWidth="120.0" />
            <Button text="Account" prefHeight="30.0" prefWidth="120.0" />
        </VBox>
    </right>

</BorderPane>